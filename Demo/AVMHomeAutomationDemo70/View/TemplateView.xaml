                <local:ETSIUnitInfoView DataContext="{Binding EtsiUnitInfo}"/>
            </Grid>
            <Grid Visibility="{Binding ShowSimpleOnOff, Converter={StaticResource BoolToVisibilityConverter}}">
                <local:SimpleOnOffView DataContext="{Binding SimpleOnOff}" />
