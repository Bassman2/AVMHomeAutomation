<UserControl x:Class="AVMHomeAutomationDemo.View.ColorControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AVMHomeAutomationDemo.View"
             xmlns:conv="clr-namespace:AVMHomeAutomationDemo.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <conv:IntToStringConverter x:Key="IntToStringConverter"/>
    </UserControl.Resources>
    <GroupBox Header="Color Control" Margin="3">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" Content="Hue" />
            <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Hue, Converter={StaticResource IntToStringConverter}, Mode=OneWay}" IsReadOnly="True" Margin="3" />
            <Label Grid.Column="0" Grid.Row="1" Content="Saturation" />
            <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Saturation, Converter={StaticResource IntToStringConverter}, Mode=OneWay}" IsReadOnly="True" Margin="3" />
            <Label Grid.Column="0" Grid.Row="2" Content="Unmapped Hue" />
            <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding UnmappedHue, Converter={StaticResource IntToStringConverter}, Mode=OneWay}" IsReadOnly="True" Margin="3" />
            <Label Grid.Column="0" Grid.Row="3" Content="Unmapped Saturation" />
            <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding UnmappedSaturation, Converter={StaticResource IntToStringConverter}, Mode=OneWay}" IsReadOnly="True" Margin="3" />
            <Label Grid.Column="0" Grid.Row="4" Content="Temperature" />
            <TextBox Grid.Column="1" Grid.Row="4" Text="{Binding Temperature, Converter={StaticResource IntToStringConverter}, Mode=OneWay}" IsReadOnly="True" Margin="3" />
        </Grid>
    </GroupBox>
</UserControl>
